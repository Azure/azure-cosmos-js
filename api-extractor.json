{
  "$schema": "https://developer.microsoft.com/json-schemas/api-extractor/api-extractor.schema.json",
  "compiler": {
    "configType": "tsconfig",
    "rootFolder": "."
  },
  "project": {
    "entryPointSourceFile": "dist-esm/src/index.d.ts"
  },
  "validationRules": {
    "missingReleaseTags": "allow"
  },
  "dtsRollup": {
    "enabled": true,
    "publishFolder": "..",
    "mainDtsRollupPath": "dist/index.d.ts"
  },
  "apiReviewFile": {
    "enabled": false
  },
  "apiJsonFile": {
    "enabled": false
  }
}

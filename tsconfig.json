{
  "compilerOptions": {
    "declaration": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist-esm",
    "preserveConstEnums": true,
    "removeComments": false,
    "target": "es6",
    "sourceMap": true,
    "newLine": "LF",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es6", "esnext.asynciterable"]
  },
  "include": ["./src/**/*", "./test/**/*.spec.ts"],
  "exclude": ["node_modules"]
}

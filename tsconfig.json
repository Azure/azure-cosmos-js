{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./lib",
    "preserveConstEnums": true,
    "removeComments": true,
    "target": "es6",
    "sourceMap": true,
    "newLine": "LF",
    "lib": [
      "es6",
      "esnext.asynciterable"
    ]
  },
  "include": [
    "./src/**/*",
    "./test/**/*.spec.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}